{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/atoms": [
        "src/ui/atoms/"
      ],
      "@/molecules": [
        "src/ui/molecules"
      ],
      "@/organisms": [
        "src/ui/organisms"
      ],
      "@/components": [
        "src/ui/components"
      ],
      "@/theme": [
        "src/ui/system/theme"
      ],
      "@/i18n": [
        "src/ui/system/i18n"
      ],
      "@/stories": [
        "src/ui/stories"
      ],
      "@/hooks": [
        "src/hooks"
      ],
      "@/helpers": [
        "src/helpers"
      ],
      "@/types": [
        "src/types"
      ],
      "@/utils": [
        "src/utils"
      ],
      "@/test": [
        "test"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
